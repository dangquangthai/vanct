<% if @success %>
  <%= turbo_modal_close %>

  <%= turbo_stream.replace('users-table') do %>
    <%= render Admin::Users::TableComponent.new(users: @tenant.users, tenant: @tenant) %>
  <% end %>

  <%= turbo_klass "#user_#{@user.id}", 'selected', 'add' %>
<% else %>
  <%= turbo_modal do %>
    <%= render Admin::Users::FormComponent.new(user: @user, url: admin_tenant_user_path(@user.id, tenant_id: @tenant.id), form_method: 'PATCH', form_title: 'Cập nhật người dùng') %>
  <% end %>
<% end %>
