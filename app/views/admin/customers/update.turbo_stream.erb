<% if @success %>
  <%= turbo_modal_close %>

  <%= turbo_stream.replace('customers-table') do %>
    <%= render Admin::Customers::TableComponent.new(customers: Customer.without_ace) %>
  <% end %>

  <%= turbo_klass "#customer_#{@customer.id}", 'selected', 'add' %>
<% else %>
  <%= turbo_modal do %>
    <%= render Admin::Customers::FormComponent.new(customer: @customer, url: admin_customer_path(@customer.id), form_method: 'PATCH', form_title: 'Cập nhật khách hàng') %>
  <% end %>
<% end %>
