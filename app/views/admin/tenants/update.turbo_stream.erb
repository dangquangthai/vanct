<% if @success %>
  <%= turbo_modal_close %>

  <%= turbo_stream.replace('tenants-table') do %>
    <%= render Admin::Tenants::TableComponent.new(tenants: Tenant.without_ace.order('created_at DESC')) %>
  <% end %>

  <%= turbo_klass "#tenant_#{@tenant.id}", 'selected', 'add' %>
<% else %>
  <%= turbo_modal do %>
    <%= render Admin::Tenants::FormComponent.new(tenant: @tenant, url: admin_tenant_path(@tenant.id), form_method: 'PATCH', form_title: 'Cập nhật Account') %>
  <% end %>
<% end %>
