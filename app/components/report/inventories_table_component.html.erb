<div class="max-w-full overflow-auto border-t">
  <table class="table no-break-line w-full" id="inventories-table">
    <tbody>
      <% inventories.each do |inventory| %>
        <tr id="inventory_<%= inventory.id %>">
          <td>
            <div class="grid gap-1">
              <div><%= inventory.name %> | <%= inventory.no %> | <%= inventory.unit %></div>
              <div class="grid grid-cols-4 gap-2">
                <div class="grid gap-1">
                  <span class="font-bold text-gray-600">ĐẦU</span>
                  <span><%= inventory.open %></span>
                </div>
                <div class="grid gap-1">
                  <span class="font-bold text-gray-600">NHẬP</span>
                  <span><%= inventory.input %></span>
                </div>
                <div class="grid gap-1">
                  <span class="font-bold text-gray-600">XUẤT</span>
                  <span><%= inventory.output %></span>
                </div>
                <div class="grid gap-1">
                  <span class="font-bold text-gray-600">CUỐI</span>
                  <span><%= inventory.close %></span>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="overflow-auto flex items-center justify-center h-10 mx-2">
  <%== pagy_nav(pagy) if pagy.pages > 1 %>
</div>
